html, body {
  min-width: 300px;
  min-height: 480px;
}

body {
	font-family: 'Noticia Text', serif;
	background: #E6E6E6;
}

a {
	color: #5F980D;
}
a:hover {
	color: #95A469;
}

h1 {
	font-size: 2em;
	margin: 0; 
}

h2 {
	font-size: 1.75em;
	margin: 0;
}

span, b, strong, label {
	color: #333;
}

.header, .footer {
	text-align: center;
	padding: 10px 0;
	background-color: #EEE;
}

.header {
	border-bottom: 1px solid #DDD;
}

.footer {
	border-top: 1px solid #DDD;	
}

.footer {
	color: #999;
}

main {
	margin: 0 auto;
	text-align: center;
  max-width: 1000px;
  padding: 10px 0;
}
