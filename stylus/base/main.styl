html, body {
  min-width: 320px;
  min-height: 480px;
}

body {
	font-family: 'Noticia Text', serif;
	background: $bgMainColor;
	overflow-x: hidden;
}

a {
	color: $linkColor;
}
a:hover {
	color: $linkHoverColor;
}

h1 {
	font-size: 2em;
	margin: 0; 
}

h2 {
	font-size: 1.75em;
	margin: 0;
}

span, b, strong, label {
	color: $textMainColor;
}

.header, .footer {
	text-align: center;
	padding: 10px 5px;
	background-color: $bgSecondColor;
}

.header {
	border-bottom: 1px solid $bgSecondBorderColor;
}

.footer {
	border-top: 1px solid $bgSecondBorderColor;	
}

.footer {
	color: $textSecondColor;
}

main {
	margin: 0 auto;
	text-align: center;
  max-width: 960px;
  padding: 10px 0;
}
